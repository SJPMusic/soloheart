{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DnD 5.1 SRD Character Schema",
  "description": "A comprehensive character data model compliant with the 5.1 SRD",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Schema version",
          "default": "1.0.0"
        },
        "created_date": {
          "type": "string",
          "format": "date-time",
          "description": "Character creation date"
        },
        "last_modified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification date"
        },
        "creation_method": {
          "type": "string",
          "enum": ["step_by_step", "vibe_code", "manual"],
          "description": "How the character was created"
        }
      },
      "required": ["version", "created_date"]
    },
    "basic_info": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Character name",
          "minLength": 1,
          "maxLength": 100
        },
        "race": {
          "type": "string",
          "description": "Character race",
          "enum": [
            "Human", "Elf", "Dwarf", "Halfling", "Dragonborn", 
            "Gnome", "Half-Elf", "Half-Orc", "Tiefling"
          ]
        },
        "class": {
          "type": "string",
          "description": "Character class",
          "enum": [
            "Barbarian", "Bard", "Cleric", "Druid", "Fighter",
            "Monk", "Paladin", "Ranger", "Rogue", "Sorcerer",
            "Warlock", "Wizard"
          ]
        },
        "background": {
          "type": "string",
          "description": "Character background",
          "enum": [
            "Acolyte", "Criminal", "Folk Hero", "Haunted One", "Noble",
            "Sage", "Soldier", "Urchin"
          ]
        },
        "alignment": {
          "type": "string",
          "description": "Character alignment",
          "enum": [
            "Lawful Good", "Neutral Good", "Chaotic Good",
            "Lawful Neutral", "True Neutral", "Chaotic Neutral",
            "Lawful Evil", "Neutral Evil", "Chaotic Evil"
          ]
        },
        "level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20,
          "default": 1,
          "description": "Character level"
        },
        "experience_points": {
          "type": "integer",
          "minimum": 0,
          "default": 0,
          "description": "Total experience points"
        },
        "proficiency_bonus": {
          "type": "integer",
          "minimum": 2,
          "maximum": 6,
          "default": 2,
          "description": "Proficiency bonus based on level"
        }
      },
      "required": ["name", "race", "class", "level"]
    },
    "ability_scores": {
      "type": "object",
      "properties": {
        "strength": {
          "type": "integer",
          "minimum": 1,
          "maximum": 30,
          "default": 10,
          "description": "Strength ability score"
        },
        "dexterity": {
          "type": "integer",
